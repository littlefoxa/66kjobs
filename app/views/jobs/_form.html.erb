<%= simple_form_for @job , :url =>  preview_jobs_path , :method => :post,  html: { class: 'form-horizontal' } , :wrapper => :horizontal_form,  :wrapper_mappings => {    check_boxes: :horizontal_radio_and_checkboxes,    radio_buttons: :horizontal_radio_and_checkboxes,    file: :horizontal_file_input,    boolean: :horizontal_boolean } do |f| %>




       <h4 class="instruction"> &nbsp; &nbsp;&nbsp;第一步，告訴我們詳細資訊 </h4>


    <%= f.input :title, :label => "Case Title", :hint => "Ex. “Web Design” or “App Design”" %>

    <% @categories = Category.all.map{ |c| [c.name, c.id] } %>

    <%= f.input :category_id, :collection => @categories ,    as: :radio_buttons, :checked => @categories[1] %>


     <%= f.input :lower_bound , :label => '預算', :wrapper => :prepend_append do  %>
         <%= f.input_field :lower_bound, :as => :string, placeholder: '下限 (Lower bound)' %> ~
         <%= f.input_field :higher_bound, :as => :string, placeholder: '上限 (Higher bound)' %>
     <% end %>


    <%= f.input :location, :label => "地點", :hint => "臺北 / 高雄 / 上海 / Remote ...etc." %>

      <%= f.input :description, :label => "案件敘述", :input_html => { :rows => 10, :data => { :provide => "markdown"} }, :hint => "使用 Markdown 語法" %>

    <%= f.input :apply_instruction, :label => "如何聯繫", :hint => "Example: Send Email to hr@mycompany.com" , :input_html => { :rows => 3 } %>


    <h4 class="instruction"> &nbsp; &nbsp;&nbsp;介紹你的公司 </h4>

    <br><br>


    <%= f.input :company_name, :input_html => { :class => "col-lg-4"}, :label => "公司 / 組織名稱", :hint => "Enter your company or organization’s name."%>

    <%= f.input :url, :label => "URL" %>
    <%= f.input :email, :hint => "請務必填寫，您會收到一封email以及連結來修改此篇刊登的內容." %>

    <%= f.input :token, :as => :hidden, :valie => @job.token if !@job.new_record? %>
<hr>

<div class="form-group text optional job_description">
  <label class="text optional col-sm-1 control-label" for="job_description"></label>
  <div class="col-sm-11">
      <%= f.submit "預覽案件刊登啟事" , :class => "btn btn-lg btn-danger" %>
  </div>
</div>


<% end %>
